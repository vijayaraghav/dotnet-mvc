@model loginmvc.Models.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>INDEX</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/scripts/angular.js"></script>
    <script src="~/scripts/angular.min.js"></script>
    <script src="~/Js/Login.js"></script>
    <style>
     .cor-rad{
         border-radius:10px;
     }
     .con-top{
         padding-top:15%;
         margin-top:auto;
     }
     
    </style>
</head>

<body ng-app="myApp">
    
        <div class="container con-top" ng-controller="myCtrl" style="align-content:center">
            <div class="row">
                <div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2"> 
                    <div class="panel panel-default" style="border-radius:30px">
                        <div class="panel-heading" style="border-top-left-radius:30px;border-top-right-radius:30px">
                            <span class="glyphicon glyphicon-lock"></span> Login
                        </div>
                        <div class="panel-body">

                            @*<form class="form-control" style="height:30em;margin-top:1em;width:50%;background-color:cadetblue;">*@
                            @*<h1><b>LOGIN</b></h1>*@
                            <form class="form-horizontal" role="form" >
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Email</label>
                                    <div class="col-sm-9">
                                        <input class="form-control cor-rad" type="email" ng-model="Email" required />
                                        
                                            @*@Html.TextBoxFor(model => model.Email, new { @class = "form-control cor-rad" })*@
                                            @Html.ValidationMessageFor(model => model.Email,"",new { @style = "color:red" })
                                        
                                    </div>
                                </div>
                                <div class="form-group">
                                    @*<div class="col-xs-6 col-md-4" style="padding-top:6%;padding-left:6%">
                                        @Html.LabelFor(model => model.Password)
                                    </div>*@
                                    <label class="col-sm-3 control-label">Password</label>
                                    <div class="col-sm-9">
                                        <input class="form-control cor-rad" type="password" maxlength="10" ng-model="Password" required    />
                                        @*@Html.PasswordFor(model => model.Password, new { @class = "form-control cor-rad" })*@
                                        @Html.ValidationMessageFor(model => model.Password,"", new { @style = "color:red" })
                                    </div>

                                </div>
                                <div class="form-group">
                                    <div class="col-sm-11 col-sm-offset-3">
                                        @*<button class="btn btn-primary" name="button" value="login" formaction="/Login/Authorise" formmethod="post" style="background-color:#5cb85c;width:80px">login</button>*@
                                        <button class="btn btn-primary" name="button" value="login" ng-click="Login()" style="background-color:#5cb85c;width:80px">login</button>
                                        @*<button class="btn btn-primary" name="button" value="register" formaction="/Register"  formmethod="post">Register</button>*@
                                        <button class="btn btn-primary" name="button" value="register" ng-click="reg()" formnovalidate>Register</button>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-12 col-sm-offset-3">
                                        <a href="/ForgetPassword">Forgot password</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
     
</body>
</html>
<script src="~/scripts/jquery-1.10.2.min.js"></script>
<script src="~/scripts/bootstrap.min.js"></script>